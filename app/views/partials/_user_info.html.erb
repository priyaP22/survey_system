<div id="user-info" class="modal fade" data-new-user="<%= !current_user %>">
  <%= user_form do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <h4> <%= f.label :name, 'What\'s your name?' %> </h4>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-user"></i>
              </span>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <h4> <%= f.label :email, 'What\'s your email?' %> </h4>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-user"></i>
              </span>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <span class="help-block">This is your username and email. It will be associated with each survey participation you make</span>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
          <% if current_user%>
            <button class="btn btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
