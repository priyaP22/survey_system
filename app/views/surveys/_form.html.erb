<div class="form_survey">
  <%= bootstrap_form_for @survey, local: true do |form| %>

    <% if @survey.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@survey.errors.count, "error") %> prohibited
          this survey from being saved:
        </h2>
        <ul>
          <% @survey.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= form.text_field :name, class: 'form-control' %>
    </p>

    <p>
      <%= form.text_area :description, class: 'form-control' %>
    </p>
    <div class="fields">
      <%= form.fields_for :questions do |builder|%>
        <%= render 'question', f: builder %>
      <% end %>
    </div>
    <p><%= link_to_add_fields('Add Question', form, :questions, class: 'btn btn-primary') %></p>
    <p>
      <%= form.submit "Submit" ,class: 'login-button'%>
    </p>

  <% end %>
</div>
